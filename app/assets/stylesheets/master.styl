  background-color: #faa !important;
}

.list .form {
  margin-top: 20px;
  float: left;
}

.list input[type="text"] {
  width: 15em;
}

.list input[type="submit"] {
  paddin: 0;
  margin: 0;
  width: auto;
  height: auto;
  float: right;
}

.printersLit {
  float: none !important;
}

@media screen-breakpoint-one {
  /* Minimize lists */
  .list {
    width: 100%;
  }

  .list .thead, .list th {
    display: none;
  }

  .list tr {
    display: block;
    padding: 2%;
  }

  .list td {
    display: block;
    padding: 2px;
    border-bottom: none;
  }

  .list td:first-of-type {
    font-size: 120%;
    padding: 6px 2px;
  }

  .list td[data-title]:before {
    content: attr(data-title) ":\00A0";
    font-weight: bold;
  }

  .list .table-actions {
    display: inline-block;
  }

  .table-actions .btn {
    font-size: 90%;
    padding: 2px 10px;
  }
}

