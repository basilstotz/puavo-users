/*
====================================================================================================
MEDIA QUERIES
====================================================================================================
*/

screen-breakpoint-one = "screen and (max-width: 768px)"
screen-breakpoint-two = "screen and (max-width: 480px)"

screen-portrait-breakpoint-one = "screen and (orientation: portrait) and (max-device-width: 800px)"
screen-portrait-breakpoint-two = "screen and (orientation: portrait) and (max-device-width: 540px)"

/*
====================================================================================================
BASE
====================================================================================================
*/

* {
  box-sizing: border-box;
}

body {
  font-family: Arial, "Helvetica Neue", sans-serif;
  line-height: 1.5;
  margin: 0;
  padding: 0;
  background: baseBg;
}

/* The school name at the top of the page */
header#schoolName {
  font-size: 220%;
  font-weight: normal;
  font-variant: small-caps;
  margin-top: 12px;
}

@media screen-breakpoint-one {
  header#schoolName {
    font-size: 175%;
    margin-top: 0;  /* topmenu becomes a solid block, no need to push content downwards */
  }
}

/* Currently this is only used for the debugging information block */
footer {
  color: transparent;
  font-size: 80%;
  text-align: right;
}

@media screen-breakpoint-one {
  footer {
    font-size: 60%;
  }
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal;
}

h1 {
  font-size: 250%;
  border-bottom: 1px solid headersUnderlineColor;
}

h2 {
  margin-top: 25px;
  font-size: 200%;
  border-bottom: 1px dashed headersUnderlineColor;
}

h3 {
  font-size: 130%;
  border-bottom: 1px dotted headersUnderlineColor;
}

h4 {
  font-size: 115%;
}

h5 {
  font-size: 110%;
}

h6 {
  font-size: 105%;
}

a {
  color: linkNormalColor;
}

a:hover {
  color: linkHoverColor;
  text-decoration: none;
}

a:focus {
  color: linkFocusColor;
}

p {
  margin: 0 0 0.5em 0;      /* TODO: this can be removed (but see user/device info pages first!) */
}

img {
  border: none;
  max-width: 100%;
}

hr {
  /* Used to break floating boxes into controlled sections, so to speak */
  border: none;
  clear: both;
  float: none;
  height: 0;
  margin: 0;
  width: 100%;
  visibility: hidden;
}

legend {
  font-weight: bold;
  font-size: 110%;
  padding: 0 5px;
}

/*
====================================================================================================
THE TOPMOST MENU BAR
====================================================================================================
*/

/* The bar at the top of the page. Contains the organisation and school menus, the quick search bar,
   the username of the currently logger user and the logout button. */
.topmenu {
  margin: 0;
  min-width: 300px;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;

  background-color: baseOrangeGradient;
  background-image: linear-gradient(baseOrange 0% ,baseOrangeGradient 100%);
  border-bottom: 1px solid baseBoxShadowBorderColor;
  box-shadow: 2px 4px 6px rgba(68, 68, 68, 0.80);
}

@media screen-breakpoint-one {
  .topmenu {
    /* don't cover any content */
    position: static;
    z-index: auto;
    top: auto;
    width: 100%;
    margin: 0;
  }
}

.topmenu ul {
  list-style-type: none;
}

/* Wraps the actual topmenu contents */
.topmenu-content {
  font-size: 80%;
  margin: 0 auto;
  max-width: 1200px;
  position: relative;
  width: 95%;
}

/* The left topmenu block contains the organisation and school dropdown menus */
.topmenu-left {
  float: left;
  font-size: 85%;
  font-weight: bold;
  line-height: 3.5;
  margin: 0;
  padding: 0 5px;
  text-transform: uppercase;
}

.toplevelMenu {
  float: left;
  color: #000;
}

.toplevelMenu:hover {
  background: #fff;
  color: #000;
}

.toplevelMenu span {
  cursor: default;
  padding-left: 10px;
  padding-right: 10px;
}

.toplevelMenu span:after {
  content: " â–¼";
}

/* The organisation menu does not exist for non-owners */
.noMenuHighlight span:after {
  content: "";
}

.noMenuHighlight:hover {
  background: none;
  color: #000;
}

/* A generic dropdown menu container (UL) */
.toplevelDropdown {
  visibility: hidden;
  display: none;
  position: absolute;

  margin: 0 0 0 -1px;
  padding: 5px;
  left: auto;

  background: baseOrangeGradient;
  border-left: 1px solid #222;
  border-right: 1px solid #222;
  border-bottom: 1px solid #222;
  border-radius: 0 0 4px 4px;

  line-height: 1;
  z-index: 10;

  box-shadow: 0 6px 6px rgba(68, 68, 68, 0.80);

  max-height: 600px;
  min-width: 200px;
  overflow-y: auto;
}

/* Make the dropdown menu visible */
.toplevelMenu:hover .toplevelDropdown {
  visibility: visible;
  display: block;
}

.toplevelDropdown li {
  display: block;
  border-top: 1px solid #ccc;
  padding: 2px 0;
  clear: both;
}

.toplevelDropdown li:first-of-type {
  border-top: none;
}

.toplevelMenu a {
  color: #000;
  margin: 0;
  padding: 10px;
  display: block;
  text-decoration: none;
}

.toplevelMenu a:hover {
  color: #000;
  background: #fff;
}

/* The per-school quick link list */
ul.schoolLinks {
  padding-top: 2px;
  padding-left: 20px;
  font-size: 80%;
}

.schoolLinks li {
  float: left;
  clear: none;
  border: none;
}

.schoolLinks a {
  padding: 2px;
}

/* TODO: This menu is the wrong place for this button! Provide a link to the school list page instead.
   We have to override annoyingly many properties, because the button is actually an "A" element. */
.newSchool {
  border-top: none !important;
  margin-top: 10px !important;
  text-transform: none !important;
  float: right;
}

/* Outer container for the search box */
.topmenu-search {
  float: left;
  margin: 0;
  padding: 0 5px;
}

/* The search box outer element */
.topmenu-search input {
  float: left;
  margin: 5px 0 0 5px;
  padding: 5px 30px 5px 10px;

  border: 1px solid formElementBorderColor;
  border-radius: 4px;
}

/* The right topmenu block contains the logged in username and the logout button */
.topmenu-right {
  float: right;
  padding: 0;
  margin: 3px 0 0 0;
}

@media screen-breakpoint-one {
  .topmenu-right {
    padding-bottom: 5px;
  }
}

.topmenu-right li {
  float: left;
  line-height: 1.5;
  margin: 0;
  padding: 0 2px;
}

.topmenu-right a {
  text-decoration: none;
}

#loggedInName {
  margin-top: 6px;
}

#logoutButton {
  border: none;
  margin: 0 0 0 10px;
  padding: 4px 10px;
}

/*
====================================================================================================
MAIN PAGE LAYOUT AND THE MULTILINE "TAB" ROW
====================================================================================================
*/

/* Wraps everything on the page below the topmenu */
.container {
}

.clearfix {
  display: block;
}

.container:after, .clearfix:after {
  content: "\0020";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
  overflow: hidden;
}

/* Main content container */
.main-wrap {
  padding: 10px;
  margin: 20px auto 0 auto;
  width: 95%;
  max-width: 1200px;  /* TODO: I really want to get rid of this limitation. */
  background: baseBg;
  border: 5px solid #3E3E2D;
  box-shadow: 0px 15px 15px rgba(68, 68, 68, 0.70);
}

@media screen-breakpoint-one {
  .main-wrap {
    padding: 5px;
    padding-top: 0;   /* don't leave a gap between topbar and content */
    margin-top: 0;
    border: none;
    box-shadow: none;
    width: 100%;
  }
}

.navbar-first-level {
  clear: both;
  margin: 5px 0 0px;
}

.navbar-first-level ul {
  display: inline-block;
  list-style: none;
  margin: 0 0 -0.5em 0;
  padding: 0;
  text-align: center;
  width: 100%;
}

.navbar-first-level li {
  background: linear-gradient(baseOrange, baseOrangeGradient);
  border-radius: 4px 4px 0 0;
  float: left;
  margin: 0 3px 0 0;
  font-size: 80%;
  font-weight: bold;
  line-height: 3;
  text-transform: uppercase;
}

.navbar-first-level li:hover {
  background: linear-gradient(baseBrown, baseBrownGradient);
}

.navbar-first-level a {
  text-decoration: none;
  white-space: nowrap;
  display: block;
  padding: 0 1em;
  color: #000;
}

.navbar-first-level .current_first {
  background: linear-gradient(baseBrown, baseBrownGradient);
  border: 1px solid baseBoxShadowBorderColor;
  border-bottom: none;
}

.current_first a {
  color: creamWhite;
}

.navbar-second-level {
  margin: 0;
  padding: 0;
  width: 100%;
  font-size: 70%;
  text-transform: uppercase;
  background: linear-gradient(baseBrownGradient 35%, baseBrown 60%);
  border: 1px solid baseBoxShadowBorderColor;
  border-radius: 0 4px 0 0;
}

.navbar-second-level ul {
  margin: 0 0 -1px;
  padding: 5px 0 0;
  display: block;
  list-style: none;
}

/* TODO: Figure out exactly why the second tab bar completely self-destructs without this */
.navbar-second-level ul:after {
  clear: both;
  content: " ";
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

.navbar-second-level li {
  float: left;
  margin: 0 0 0 5px;
  padding: 0;
  position: relative;
  width: auto;
}

.navbar-second-level a {
  display: block;
  text-align: center;
  margin: 0;
  padding: 8px;
  color: #E6E6D8;
  text-decoration: none;
  white-space: nowrap;
  border-radius: 10px 10px 0 0;
  border: 1px solid transparent;
}

.navbar-second-level .current_second a, .navbar-second-level a:hover {
  background: white;
  color: #4A4D4A;
  border-left: 1px solid baseBoxShadowBorderColor;
  border-right: 1px solid baseBoxShadowBorderColor;
  border-top: 1px solid baseBoxShadowBorderColor;
  border-radius: 4px 4px 0 0;
}

.navbar-second-level a:hover {
}

/* Page contents below the tab bar */
.maincontent {
  font-size: 80%;
  margin: 0;    /* Do not change, breaks the layout */
  padding: 20px;
  position: relative;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid baseBoxShadowBorderColor;
  border-left: 1px solid baseBoxShadowBorderColor;
  border-right: 1px solid baseBoxShadowBorderColor;
  border-radius: 0 0 4px 4px;
}

@media screen-breakpoint-one {
  .maincontent {
    padding: 5px;
  }
}

/* Used on the school page to push content down, below the tools */
.maincontent .dashboard {
  float: left;
  margin: 0;
  width: 100%;
}

.maincontent h1 {
  margin: 0 0 10px 0;
  padding: 0;
  line-height: 1;
}

@media screen-breakpoint-one {
  .navbar-first-level {
    font-size: 80%;
  }

  .navbar-first-level a {
    padding: 10px;
  }

  .navbar-first-level li {
    line-height: 1;
  }

  .navbar-second-level {
    font-size: 60%;
  }

  .navbar-second-level a {
    padding: 5px;
  }
}

@media screen-breakpoint-two {
  .navbar-first-level {
    font-size: 60%;
  }

  .navbar-first-level a {
    padding: 10px;
  }

  .navbar-second-level {
    font-size: 50%;
  }

  .navbar-second-level a {
    padding: 5px;
  }
}

/*
====================================================================================================
SEARCH FIELDS
====================================================================================================
*/

/* The search box itself */
#search {
  margin: 4px;
  z-index: 1;
  background: url("<%= image_path('magnifier.png')%>") no-repeat scroll 97% center #FFFFFF;
  background-repeat: no-repeat;
}

.loading {
  /*
    The JavaScript code doing the live search adds this class to the search box when search
    is in progress, then removes it afterwards.
  */
  background: url("<%= image_path('ajax-loader.gif')%>") no-repeat scroll 97% 4px #FFFFFF !important;

  /*
    FIXME: Unfortunately this class is also added to the user search box in the group members page,
    and the box loses its border. Not good. I don't understand why this class messes up that box,
    it does not touch borders or anything else!? These styles are not coming from the #jquery-live-search
    defined below, I already checked that.
  */
}

/* Container for the top bar search results */
#jquery-live-search {
  background: #fff;
  border: 1px solid #cccaaa;
  border-width: 0 1px 1px 1px;
  margin: 0 1em 0 0;
  max-height: 350px;
  overflow: auto;
  padding: 5px;
  position: absolute;
  width: auto;
  z-index: 9999;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5);
}

.search_result table {
  border-spacing: 0;
  margin: 0px;
  padding: 0px;
}

.search_result th {
  white-space: nowrap;
}

.search_result legend {
  padding-left: 2px;
  padding-right: 2px;
}

fieldset.search_result {
  font-size: 80%;
  padding: 5px;
}

@media screen-breakpoint-one {
  #jquery-live-search {
    padding: 0;
    margin: 0;
    left: 0 !important;
    width: 100%;
    font-size: 90%;
  }

  fieldset.search_result {
    margin: 2px;
    padding: 2px;
    border-top: 2px solid #000;
    border-left: none;
    border-right: none;
    border-bottom: none;
  }

  .search_result legend {
    margin-left: 10px;
    padding: 0 5px;
  }

  .search_result .list tr {
    padding: 0;
  }

  .search_result .list td:first-of-type {
    font-size: 110% !important;
    font-weight: bold;
  }
}

/*
====================================================================================================
COMMON CONTENT ELEMENTS
====================================================================================================
*/

[class*=icon] {
  font-size: 120%;
}

/* Generic floating container boxes that have titles */
.content-box-new {
  min-width: 45%;
  width: 49%;
  float: left;
  margin: 5px;
  padding: 0;
}

@media screen-breakpoint-one {
  .content-box-new {
    width: 100%;
    margin: 5px 0;
  }
}

.fullWidth {
  /* Used on the school page to show admins and billing info */
  width: 99%;
  clear: both;
  float: none;
}

.content-box-new header {
  background: linear-gradient(#ba722d, #a36a2a);
  color: #fff;
  padding: 5px 10px;
  margin: 0;
  font-size: 130%;
  border-radius: 5px 5px 0 0;
  border-bottom: 1px dotted #000;
}

.content-box-new .contents {
  padding: 5px;
  background: #f0f0f0;
  border-radius: 0 0 5px 5px;
}

.content-box-new table {
  width: 100%;
}

.content-box-new tr:nth-child(odd) {
  background: #f0f0f0;
}

.content-box-new tr:nth-child(even) {
  background: #e0e0e0;
}

.content-box-new h3 {
  margin: 5px 0 10px 0;
  padding: 0 5px;
  border-bottom: 2px solid #000;
  font-weight: bold;
}

/* Table-ish emulation */
.multilineItem {
  border-bottom: 1px solid #ccc;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.multilineItem .header {
  font-size: 120%;
  font-weight: bold;
  margin-bottom: 5px;
}

.multilineItem .content {
  margin-left: 20px;
}

/* Heading row/column of tables. Can't use TH only, as it's usage varies. */
.tableHeading th {
  background: #ccc;
}

.noWrap {
  white-space: no-wrap;
}

@media screen-breakpoint-one {
  .noWrap {
    /* narrow pages are unreadable otherwise */
    white-space: normal;
  }
}

.noFloat {
  float: none !important;
}

/* A generic missing/unset information indicator for data that isn't always required but really should be set */
.missingData {
  color: #f00;
}

/* Buttons and areas that are visible to owners only */
.ownersOnly {
  border: 1px dashed #f00;
}

/* Puavo-conf tables in various places */
.puavoConf tr:nth-child(odd) {
  background: #ddd;
}

.puavoConf tr:nth-child(even) {
  background: #fff;
}

/* Basic user/device information block */
.basic-info td {
  vertical-align: top;
}

.basic-info h1 {
  border-bottom: none;
}

.basic-info label {
  font-weight: bold;
}

.basic-info .notice_text {
  color: red;
}

/* Images on school, user, server and device pages */
.image {
  margin: 0;
  padding: 0;
}

/*
====================================================================================================
TOOLBOXES
====================================================================================================
*/

.tools-container {
  float: right;
  margin-bottom: 2%;
  background: #fff;
  display: block;
}

@media screen-breakpoint-one {
  .tools-container {
    float: none;
  }
}

.tools-container:empty, .tools-container span:empty {
  display: none;
}

.tools-container .tools {
  float: right;
  height: 40px;
  margin: 5px 0 0.2em 1em;
  padding: 0;
}

.tools-container .tools .sub-tools {
  list-style: none;
  margin: 0;
}

.tools-container .tools > div, .tools-container .tools .sub-tools > li {
  float: left;
  margin: 0;
  padding: 0 0 0 5px;
  position: relative;
}

.tools-container .tools .sub-tools > li.tool {
  padding: 0 1em;
}

.tools-container .tools .tool ul {
  list-style: none;
  display: none;
  right: 1em;
  padding: 0;
  position: absolute;
  margin: 0;
}

.tools-container .tools .tool ul li {
  padding: 0;
}

.tools a, .tool span {
  display: block;
  height: auto;
  line-height: 1.25;
  margin: 0;
  padding: 10px;
  white-space: nowrap;
  width: auto;
}

.tools .tool span:hover {
  cursor: pointer;
}

.tools .tool:hover ul {
  /* Make the submenu visible */
  display: block;
}

.tool ul {
  /* A tool submenu */
  border: 1px solid #aaa;
  background: #fff;
}

.tool ul li {
  margin: 2px;
}

.tool a {
  color: #000;
  background: #fff;
  text-decoration: none;
}

.tool a:hover {
  color: #fff;
  background: #c0772f;
}

/*
====================================================================================================
FLASH MESSAGES AND OTHER WARNING/ERROR BOXES
====================================================================================================
*/

.message_alert, .message_notice, .message_success {
  font-size: 130%;
  text-align: center;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 5px;
}

/* TODO: What's the difference between message_success and message_notice? Merge them. */

.message_success {
  background: #e6efc2;
  color: #264409;
  border: 1px solid #c6d880;
}

.message_notice {
  background: #86b410;
  border: 1px solid #56340e;
}

.message_alert {
  background: #a00;
  border: 1px solid #f00;
  color: #fff;
}

/*
====================================================================================================
BUTTONS
====================================================================================================
*/

/* Base button */
.btn {
  display: inline-block;
  margin-bottom: 0;
  padding: 4px 12px;
  font-weight: normal;
  text-align: center;
  text-decoration: none;

  background: linear-gradient(buttonBg 0%, buttonGradientBg 100%);
  border: 1px solid #cccccc;
  border-color: buttonBorderColor buttonBorderColor buttonBorderColor2;
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  color: buttonNormalColor;
}

.btn:hover, .btn:focus {
  background: buttonGradientBg;
  color: buttonHoverColor;
}

.btn-danger {
  color: buttonDangerColor;
  background: linear-gradient(buttonDangerBgImage, buttonDangerGradientBgImage);
}

.btn-danger:hover, .btn-danger:focus, .btn-danger:active {
  color: buttonDangerHoverColor;
  background: buttonDangerHoverBg;
}

@media screen-breakpoint-one {
  .btn {
    padding: 0.5em 1em;
  }
}

/*
====================================================================================================
TABLES
====================================================================================================
*/

table {
  border-collapse: collapse;
}

th, td {
  vertical-align: middle;
  margin: 0;
  padding: 6px;
}

th {
  font-size: 110%;
  text-align: left;
  text-decoration: none;
}

table a {
  font-weight: bold;
}

.mountPoints td, .mountPoints th {
  border: none;
}

.mountPoints th {
  text-align: center !important;
  background: #ccc;
}

/*
====================================================================================================
FORMS
====================================================================================================
*/

