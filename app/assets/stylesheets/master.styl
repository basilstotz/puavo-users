}

p {
  margin: 0 0 0.5em 0;      /* TODO: this can be removed (but see user/device info pages first!) */
}

img {
  border: none;
  max-width: 100%;
}

hr {
  /* Used to break floating boxes into controlled sections, so to speak */
  border: none;
  clear: both;
  float: none;
  height: 0;
  margin: 0;
  width: 100%;
  visibility: hidden;
}

legend {
  font-weight: bold;
  font-size: 110%;
  padding: 0 5px;
}

/*
====================================================================================================
THE TOPMOST MENU BAR
====================================================================================================
*/

/* The bar at the top of the page. Contains the organisation and school menus, the quick search bar,
   the username of the currently logger user and the logout button. */
.topmenu {
  margin: 0;
  min-width: 300px;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;

  background-color: baseOrangeGradient;
  background-image: linear-gradient(baseOrange 0% ,baseOrangeGradient 100%);
  border-bottom: 1px solid baseBoxShadowBorderColor;
  box-shadow: 2px 4px 6px rgba(68, 68, 68, 0.80);
}

.topmenu ul {
  list-style-type: none;
}

/* Wraps the actual topmenu contents */
.topmenu-content {
  font-size: 80%;
  margin: 0 auto;
  max-width: 1200px;
  position: relative;
  width: 95%;
}

/* The left topmenu block contains the organisation and school dropdown menus */
.topmenu-left {
  float: left;
  font-size: 85%;
  font-weight: bold;
  line-height: 3.5;
  margin: 0;
  padding: 0 5px;
  text-transform: uppercase;
}

.toplevelMenu {
  float: left;
  color: #000;
}

.toplevelMenu:hover {
  background: #fff;
  color: #000;
}

.toplevelMenu span {
  cursor: default;
  padding-left: 10px;
  padding-right: 10px;
}

.toplevelMenu span:after {
  content: " â–¼";
}

/* The organisation menu does not exist for non-owners */
.noMenuHighlight span:after {
  content: "";
}

.noMenuHighlight:hover {
  background: none;
  color: #000;
}

/* A generic dropdown menu container (UL) */
.toplevelDropdown {
  visibility: hidden;
  display: none;
  position: absolute;

  margin: 0 0 0 -1px;
  padding: 5px;
  left: auto;

  background: baseOrangeGradient;
  border-left: 1px solid #222;
  border-right: 1px solid #222;
  border-bottom: 1px solid #222;
  border-radius: 0 0 4px 4px;

  line-height: 1;
  z-index: 10;

  box-shadow: 0 6px 6px rgba(68, 68, 68, 0.80);

  max-height: 600px;
  min-width: 200px;
  overflow-y: auto;
}

/* Make the dropdown menu visible */
.toplevelMenu:hover .toplevelDropdown {
  visibility: visible;
  display: block;
}

.toplevelDropdown li {
  display: block;
  border-top: 1px solid #ccc;
  padding: 2px 0;
  clear: both;
}

.toplevelDropdown li:first-of-type {
  border-top: none;
}

.toplevelMenu a {
  color: #000;
  margin: 0;
  padding: 10px;
  display: block;
  text-decoration: none;
}

.toplevelMenu a:hover {
  color: #000;
  background: #fff;
}

/* The per-school quick link list */
ul.schoolLinks {
  padding-top: 2px;
  padding-left: 20px;
  font-size: 80%;
}

.schoolLinks li {
  float: left;
  clear: none;
  border: none;
}

.schoolLinks a {
  padding: 2px;
}

/* TODO: This menu is the wrong place for this button! Provide a link to the school list page instead.
   We have to override annoyingly many properties, because the button is actually an "A" element. */
.newSchool {
  border-top: none !important;
  margin-top: 10px !important;
  text-transform: none !important;
  float: right;
}

/* Outer container for the search box */
.topmenu-search {
  float: left;
  margin: 0;
  padding: 0 5px;
}

/* The search box outer element */
.topmenu-search input {
  float: left;
  margin: 5px 0 0 5px;
  padding: 5px 30px 5px 10px;

  border: 1px solid formElementBorderColor;
  border-radius: 4px;
}

/* The right topmenu block contains the logged in username and the logout button */
.topmenu-right {
  float: right;
  padding: 0;
  margin: 3px 0 0 0;
}

.topmenu-right li {
  float: left;
  line-height: 1.5;
  margin: 0;
  padding: 0 2px;
}

.topmenu-right a {
  text-decoration: none;
}

#loggedInName {
  margin-top: 6px;
}

#logoutButton {
  border: none;
  margin: 0 0 0 10px;
  padding: 4px 10px;
}

