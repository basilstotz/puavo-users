/*
====================================================================================================
BASE
====================================================================================================
*/

* {
  box-sizing: border-box;
}

body {
  font-family: Arial, "Helvetica Neue", sans-serif;
  line-height: 1.5;
  margin: 0;
  padding: 0;
  background: baseBg;
}

/* The school name at the top of the page */
header#schoolName {
  font-size: 220%;
  font-weight: normal;
  font-variant: small-caps;
  margin-top: 12px;
}

/* Currently this is only used for the debugging information block */
footer {
  color: transparent;
  font-size: 80%;
  text-align: right;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal;
}

h1 {
  font-size: 250%;
  border-bottom: 1px solid headersUnderlineColor;
}

h2 {
  margin-top: 25px;
  font-size: 200%;
  border-bottom: 1px dashed headersUnderlineColor;
}

h3 {
  font-size: 130%;
  border-bottom: 1px dotted headersUnderlineColor;
}

h4 {
  font-size: 115%;
}

h5 {
  font-size: 110%;
}

h6 {
  font-size: 105%;
}

a {
  color: linkNormalColor;
}

a:hover {
