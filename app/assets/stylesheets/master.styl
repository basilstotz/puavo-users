  z-index: 1;
  background: url("<%= image_path('magnifier.png')%>") no-repeat scroll 97% center #FFFFFF;
  background-repeat: no-repeat;
}

.loading {
  /*
    The JavaScript code doing the live search adds this class to the search box when search
    is in progress, then removes it afterwards.
  */
  background: url("<%= image_path('ajax-loader.gif')%>") no-repeat scroll 95% 4px #FFFFFF !important;

  /*
    FIXME: Unfortunately this class is also added to the user search box in the group members page,
    and the box loses its border. Not good. I don't understand why this class messes up that box,
    it does not touch borders or anything else!? These styles are not coming from the #jquery-live-search
    defined below, I already checked that.
  */
}

/* Container for the top bar search results */
#jquery-live-search {
  background #fff;
  border: 1px solid #cccaaa;
  border-width: 0 1px 1px 1px;
  margin: 0 1em 0 0;
  max-height: 350px;
  overflow: auto;
  padding: 5px;
  position: absolute;
  width: auto;
  z-index: 9999;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);
}

.search_result table {
  border-spacing: 0;
  margin: 0px;
  padding: 0px;
}

.search_result th {
  white-space: nowrap;
}

.search_result legend {
  padding-left: 2px;
  padding-right: 2px;
}

fieldset.search_result {
