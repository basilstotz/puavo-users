/*
====================================================================================================
TOOLBOXES
====================================================================================================
*/

/* The main container for tool buttons and tool dropdown menus */
.tools-container {
  background: $toolsContainerBackground;
  margin: 0 0 20px 0;
  padding: 0;
}

/* The buttons are in a list */
.tools-container > ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;  /* right align */
  list-style: none;
  margin: 0;
  padding: 0;
}

.tools-container > ul > li {
  margin: 5px;
  padding: 1px;
}

.tools-container .btn {
  padding: 7px 10px;
}

@media #{$screen-breakpoint-one} {
  .tools-container > ul {
    /* There's no way to move the right-opening dropdown menu to open to the left
       if there's no room with pure CSS, so we have to move everything to left :-( */
    justify-content: flex-start;
  }

  .tools-container .btn {
    padding: 5px 10px;
  }
}

.tools-container .haveDropdown {
  /* The dropdown menu buttons aren't clickable */
  cursor: default;
}

/* A tool dropdown menu */
.tools-container .dropdown {
  list-style: none;

  display: none;
  position: absolute;

  left: auto;

  /* Some menus get so narrow it's hard to hit them, so impose a minimum width.
     This width is approximately the width of the parent button. */
  min-width: 130px;

  background: #fff;
  border: 1px solid #aaa;
  padding: 5px;

  box-shadow: 0 0 10px rgba(68, 68, 68, 0.8);

  z-index: 2;
}

/* Make the dropdown menu visible */
.tools-container .haveDropdown:hover .dropdown {
  visibility: visible;
  display: block;
}

/* Tool dropdown menu entries */
.tools-container .dropdown li {
  margin: 1px;
}

.tools-container .dropdown a {
  text-decoration: none;
  display: block;
  padding: 5px;
  color: #000;
  white-space: nowrap;
  width: auto;
}

.tools-container .dropdown a:hover {
  color: #fff;
  background: #c0772f;
}

/*
====================================================================================================
FLASH MESSAGES AND OTHER WARNING/ERROR BOXES
====================================================================================================
*/

.message_alert, .message_notice, .message_success {
  font-size: 130%;
  text-align: center;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 5px;
}

/* TODO: What's the difference between message_success and message_notice? Merge them. */

.message_success {
  background: #e6efc2;
  color: #264409;
  border: 1px solid #c6d880;
}

.message_notice {
  background: #86b410;
  border: 1px solid #56340e;
}

.message_alert {
  background: #a00;
  border: 1px solid #f00;
  color: #fff;
}

/*
====================================================================================================
BUTTONS
====================================================================================================
*/

/* Base button */
.btn {
  display: inline-block;
  margin-bottom: 0;
  padding: 4px 12px;
  font-weight: normal;
  text-align: center;
  text-decoration: none;

  white-space: nowrap;

  background: linear-gradient($buttonBg 0%, $buttonGradientBg 100%);
  border: 1px solid #cccccc;
  border-color: $buttonBorderColor $buttonBorderColor $buttonBorderColor2;
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  color: $buttonNormalColor;
}

.btn:hover, .btn:focus {
  background: $buttonGradientBg;
  color: $buttonHoverColor;
}

.btn-danger {
  color: $buttonDangerColor;
  background: linear-gradient($buttonDangerBgImage, $buttonDangerGradientBgImage);
}

.btn-danger:hover, .btn-danger:focus, .btn-danger:active {
