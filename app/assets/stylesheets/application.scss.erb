$baseGradientBg: rgb(242, 242, 242);

$baseBrown: rgb(163, 106, 42);
$baseBrownGradient: rgb(186, 114, 45);

$baseFont: rgb(27, 27, 27);

$baseOrange: rgb(250, 179, 46);
$baseOrangeGradient: rgb(245, 149, 69);

$baseBoxShadowBorderColor: rgb(34, 34, 34);

$toolsContainerBackground: rgb(227, 173, 114);

$buttonBg: rgb(245, 245, 245);
$buttonGradientBg: rgb(220, 220, 220);
$buttonNormalColor: rgb(51, 51, 51);
$buttonHoverColor: #000;

$buttonDangerBgColor: rgb(231, 6, 0);
$buttonDangerBgImage: rgb(219, 64, 60);
$buttonDangerGradientBgImage: rgb(194, 31, 22);
$buttonDangerHoverBg: rgb(180, 31, 23);

$buttonDangerColor: rgb(255, 255, 255);
$buttonDangerHoverColor: rgb(255, 255, 255);

