$formErrorColor: rgb(255, 0, 0);

$formOddRowBackground: none;
$formEvenRowBackground: #f5f5f5;
$formButtonRowBackground: #fff;

$loggedUserNameFore: #000;

$topmenuItemForeNormal: #000;
$topmenuItemBackHover: #fff;

/*
====================================================================================================
MEDIA QUERIES
====================================================================================================
*/

$screen-breakpoint-one: "screen and (max-width: 800px)";
$screen-breakpoint-two: "screen and (max-width: 480px)";
$screen-portrait-breakpoint-one: "screen and (orientation: portrait) and (max-device-width: 800px)";
$screen-portrait-breakpoint-two: "screen and (orientation: portrait) and (max-device-width: 540px)";

/*
====================================================================================================
BASE
====================================================================================================
*/

* {
  box-sizing: border-box;
}

body {
  font-family: Arial, "Helvetica Neue", sans-serif;
  line-height: 1.5;
  margin: 0;
  padding: 0;
  background: $bodyBg;
}

/* The school name at the top of the page */
header#schoolName {
  font-size: 220%;
  font-weight: normal;
  font-variant: small-caps;
  margin-top: 12px;
}

@media #{$screen-breakpoint-one} {
  header#schoolName {
    font-size: 200%;
    margin-left: 5px;
    margin-top: 0;  /* topmenu becomes a solid block, no need to push content downwards */
  }
}

/* Currently this is only used for the debugging information block */
footer {
  color: transparent;
  font-size: 80%;
  text-align: right;
}

@media #{$screen-breakpoint-one} {
  footer {
    font-size: 60%;
  }
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal;
}

h1 {
  font-size: 250%;
  border-bottom: 1px solid $headersUnderlineColor;
}

h2 {
  margin-top: 25px;
  font-size: 200%;
  border-bottom: 1px dashed $headersUnderlineColor;
}

h3 {
  font-size: 130%;
  border-bottom: 1px dotted $headersUnderlineColor;
}

h4 {
  font-size: 115%;
}

h5 {
  font-size: 110%;
}

h6 {
  font-size: 105%;
}

a {
  color: $linkNormalColor;
}

a:hover {
  color: $linkHoverColor;
  text-decoration: none;
}

a:focus {
  color: $linkFocusColor;
}

p {
  margin: 0 0 0.5em 0;      /* TODO: this can be removed (but see user/device info pages first!) */
}

img {
  border: none;
  max-width: 100%;
}

hr {
  /* Used to break floating boxes into controlled sections, so to speak */
  border: none;
  clear: both;
  float: none;
  height: 0;
  margin: 0;
  width: 100%;
  visibility: hidden;
}

legend {
  font-weight: bold;
  font-size: 110%;
  padding: 0 5px;
}

abbr[title]:after {
  /* Normal view */
  content: "";
}

@media #{$screen-breakpoint-one} {
  /* Can't hover over abbreviations on mobile, so display the contents */
  abbr[title]:after {
     content: " (" attr(title) ")";
  }
}

/*
====================================================================================================
TOPMENU
====================================================================================================
*/

/*
--------------------------------------------------------------------------------
THE TOP BAR
--------------------------------------------------------------------------------
*/

/* Top-level wrapper, for positioning and sizing */
#topbar-wrapper {
  padding: 0;
  display: relative;

  top: 0;
  width: 100%;
  z-index: 10;
  position: fixed;
  margin: 0;

  min-width: 400px;   /* currently a three-row layout isn't supported */

  background-color: $baseOrangeGradient;
  background-image: linear-gradient($baseOrange 0%, $baseOrangeGradient 100%);
  border-bottom: 1px solid $baseBoxShadowBorderColor;
  box-shadow: 2px 4px 6px rgba(68, 68, 68, 0.80);
}

/* Inner top bar list container */
#topbar {
  list-style-type: none;
  padding: 0;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  max-width: 1200px;
  width: 95%;
  font-size: 80%;
}

#topbar > li {
  display: inline;
  margin: 0;

  /* Keep this zero, the dropdown toplevel menubar entries must be full-height
     and non-zero padding here will break them! */
  padding: 0;
}

#topbar span {
  font-size: 90%;
}

#topbar #left {
  text-align: left;
  flex: 0 0 auto;
  margin: auto;
  padding-right: 10px;
}

#topbar #middle {
  flex-grow: 1;
  margin: auto;
}

#topbar #search {
  width: 100%;
  margin: 0;
  padding: 5px 30px 5px 10px;
  border: 1px solid $formElementBorderColor;
  border-radius: 4px;
}

#topbar #right {
  text-align: right;
  flex-grow: 1;
  margin: auto;
}

#topbar #loggedInName {
  color: $loggedUserNameFore;
  padding: 0;
}

#logoutButton {
  border: none;
  margin: 0 0 0 10px;
  padding: 4px 10px;
}

#topbar li:nth-child(1) { order: 1; }
#topbar li:nth-child(2) { order: 2; }
#topbar li:nth-child(3) { order: 3; }

@media #{$screen-breakpoint-one} {
  #topbar-wrapper {
    /* don't cover any content */
    position: static;
    z-index: auto;
    top: auto;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  #topbar {
    width: 100%;
    padding: 0 2px;
  }

  /* reorder the elements */
  #topbar li:nth-child(1) { order: 2; }
  #topbar li:nth-child(2) { order: 1; flex-basis: 100%;  }
  #topbar li:nth-child(3) { order: 3; }

  #topbar #search {
    margin: 2px auto;
  }

  #topbar #left, #topbar #right {
    max-width: none;
  }
}

@media #{$screen-breakpoint-two} {
  #loggedInName {
    /* There's no room for the name. It could be displayed if, for example, the name
       is a dropdown menu that contains the logout button. (The same menu could contain
       a link to the logged-in user's user page.) */
    display: none;

    /* Actually, this isn't very good. Very long names still can force the logout
       button onto its own row, turning the two-row intended layout into three rows. */
  }
}

/*
--------------------------------------------------------------------------------
THE DROPDOWN MENUS
--------------------------------------------------------------------------------
*/

nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

nav li {
  font-weight: bold;
  text-transform: uppercase;
  color: $topmenuItemForeNormal;
}

nav .haveDropdown, nav .noDropdown {
  /* Make the menu buttons (dropdowns or not) span the entire height of the topbar. */
  padding: 10px;

  /* Float the top-level menu items, but not their child lists */
  float: left;
}

nav .haveDropdown:after {
  content: " â–¼";
}

nav .dropdown {
  display: none;
  position: absolute;
  left: auto;

  margin: 10px 0 0 -11px;   /* position the dropdown in relation to the parent */

  padding: 5px;

  min-width: 250px;         /* wide items are easier to hit */

  max-height: 600px;
  overflow-y: auto;

  z-index: 11;    /* topbar is 10 */

  background: $baseOrangeGradient;
  border-left: 1px solid $baseBoxShadowBorderColor;
  border-right: 1px solid $baseBoxShadowBorderColor;
  border-bottom: 1px solid $baseBoxShadowBorderColor;
  border-radius: 0 0 4px 4px;

  box-shadow: 0 6px 6px rgba(68, 68, 68, 0.80);

  list-style-type: none;
}

nav .haveDropdown:hover {
  cursor: default;
  background: $topmenuItemBackHover;
}

nav .haveDropdown:hover .dropdown {
  /* Open the dropdown menu */
  display: block;
}

nav .dropdown li {
  display: list-item;
  padding: 2px 0;   /* "outer" padding between items */
  margin: 0;
  border-bottom: 1px solid #ccc;
}

nav .dropdown li:first-of-type {
  padding: 0 0 2px 0;
}

nav .dropdown li:last-of-type {
  padding: 2px 0 0 0;
  border: none;
}

nav ul a {
  display: block;
  padding: 10px;   /* "inner" padding within items, affects ALL links in the menu! */
  color: $topmenuItemForeNormal;
  text-decoration: none;
  font-size: 85%;
}

nav ul a:hover {
  background: $topmenuItemBackHover;
}

/* The per-school quick link list */
nav .schoolLinks {
  margin: 0 0 0 20px;
  padding: 0;
  display: inline-block;
}

nav .schoolLinks li {
  float: left;
  margin: 0 !important;
  padding: 0 !important;
  border: none !important;
}

.schoolLinks a {
  padding: 2px 5px;
  text-transform: none;
}

@media #{$screen-breakpoint-two} {
  nav .schoolLinks {
    /* These items take too much space on small mobile views */
    display: none;
  }
}

/*
====================================================================================================
MAIN PAGE LAYOUT AND THE MULTILINE "TAB" ROW
====================================================================================================
*/

/* Wraps everything on the page below the topmenu */
.container {
}

.clearfix {
  display: block;
}

.container:after, .clearfix:after {
  content: "\0020";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
  overflow: hidden;
}

/* Main content container */
.main-wrap {
  padding: 10px;
  margin: 20px auto 0 auto;
  width: 95%;
  max-width: 1200px;  /* TODO: I really want to get rid of this limitation. */
  background: $baseBg;
  border: 5px solid #3E3E2D;
  box-shadow: 0px 15px 15px rgba(68, 68, 68, 0.70);
}

@media #{$screen-breakpoint-one} {
  .main-wrap {
    padding: 0;
    width: 100%;
    padding-top: 0;   /* don't leave a gap between topbar and content */
    margin-top: 0;
    border: none;
    box-shadow: none;
    width: 100%;
  }
}

.navbar-first-level {
  clear: both;
  margin: 5px 0 0px;
}

.navbar-first-level ul {
  display: inline-block;
  list-style: none;
  margin: 0 0 -0.5em 0;
  padding: 0;
  text-align: center;
  width: 100%;
}

.navbar-first-level li {
  background: linear-gradient($baseOrange, $baseOrangeGradient);
  border-radius: 4px 4px 0 0;
  float: left;
  margin: 0 3px 0 0;
  font-size: 80%;
  font-weight: bold;
  line-height: 3;
  text-transform: uppercase;
}

.navbar-first-level li:hover {
  background: linear-gradient($baseBrown, $baseBrownGradient);
}

.navbar-first-level a {
  text-decoration: none;
  white-space: nowrap;
  display: block;
  padding: 0 1em;
  color: #000;
}

.navbar-first-level .current_first {
  background: linear-gradient($baseBrown, $baseBrownGradient);
  border: 1px solid $baseBoxShadowBorderColor;
  border-bottom: none;
}

.current_first a {
  color: $creamWhite;
}

.navbar-second-level {
  margin: 0;
  padding: 0;
  width: 100%;
  font-size: 70%;
  text-transform: uppercase;
  background: linear-gradient($baseBrownGradient 35%, $baseBrown 60%);
  border: 1px solid $baseBoxShadowBorderColor;
  border-radius: 0 4px 0 0;
}

.navbar-second-level ul {
  margin: 0 0 -1px;
  padding: 5px 0 0;
  display: block;
  list-style: none;
}

/* TODO: Figure out exactly why the second tab bar completely self-destructs without this */
.navbar-second-level ul:after {
  clear: both;
  content: " ";
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

.navbar-second-level li {
  float: left;
  margin: 0 0 0 5px;
  padding: 0;
  position: relative;
  width: auto;
}

.navbar-second-level a {
  display: block;
  text-align: center;
  margin: 0;
  padding: 8px;
  color: #E6E6D8;
  text-decoration: none;
  white-space: nowrap;
  border-radius: 10px 10px 0 0;
  border: 1px solid transparent;
}

.navbar-second-level .current_second a, .navbar-second-level a:hover {
  background: white;
  color: #4A4D4A;
  border-left: 1px solid $baseBoxShadowBorderColor;
  border-right: 1px solid $baseBoxShadowBorderColor;
  border-top: 1px solid $baseBoxShadowBorderColor;
  border-radius: 4px 4px 0 0;
}

.navbar-second-level a:hover {
}

/* Page contents below the tab bar */
.maincontent {
  font-size: 80%;
  margin: 0;    /* Do not change, breaks the layout */
  padding: 20px;
  position: relative;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid $baseBoxShadowBorderColor;
  border-left: 1px solid $baseBoxShadowBorderColor;
  border-right: 1px solid $baseBoxShadowBorderColor;
  border-radius: 0 0 4px 4px;
}

@media #{$screen-breakpoint-one} {
  .maincontent {
    /* Use all available space */
    padding: 5px;
    border: none;
    border-bottom: 1px solid black;
    border-radius: 0;
  }
}

/* Used on the school page to push content down, below the tools */
.maincontent .dashboard {
  float: left;
  margin: 0;
  width: 100%;
}

.maincontent h1 {
  margin: 0 0 10px 0;
  padding: 0;
  line-height: 1;
}

@media #{$screen-breakpoint-one} {
  .navbar-first-level {
    /* It's amazing how nicer everything looks with this even if it's not
       in "harmony" with the default style. */
    padding-left: 5px;
  }

  .navbar-second-level {
    border: none;
    border-top: 1px solid $baseBoxShadowBorderColor;
    border-bottom: 1px solid $baseBoxShadowBorderColor;
    border-radius: 0;
  }

  .navbar-first-level a {
    padding: 12px;
  }

  .navbar-first-level li {
    line-height: 1;
  }
}

/*
====================================================================================================
SEARCH FIELDS
====================================================================================================
*/

/* The search box itself */
#search {
  margin: 4px;
  z-index: 1;
  background: url("<%= image_path('magnifier.png')%>") no-repeat scroll 98% center #FFFFFF;
  background-repeat: no-repeat;
}

.loading {
  /*
    The JavaScript code doing the live search adds this class to the search box when search
    is in progress, then removes it afterwards.
  */
  background: url("<%= image_path('ajax-loader.gif')%>") no-repeat scroll 98% 4px #FFFFFF !important;

  /*
    FIXME: Unfortunately this class is also added to the user search box in the group members page,
    and the box loses its border. Not good. I don't understand why this class messes up that box,
    it does not touch borders or anything else!? These styles are not coming from the #jquery-live-search
    defined below, I already checked that.
  */
}

/* Container for the top bar search results */
#jquery-live-search {
  background: #fff;
  border: 1px solid #cccaaa;
  border-width: 0 1px 1px 1px;
  margin: 0 1em 0 0;
  max-height: 350px;
  overflow: auto;
  padding: 5px;
  position: absolute;
  width: auto;
  z-index: 9999;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5);
}

.search_result table {
  border-spacing: 0;
  margin: 0px;
  padding: 0px;
}

.search_result th {
  white-space: nowrap;
}

.search_result legend {
  padding-left: 2px;
  padding-right: 2px;
}

fieldset.search_result {
  font-size: 80%;
  padding: 5px;
}

@media #{$screen-breakpoint-one} {
  #jquery-live-search {
    padding: 0;
    margin: 0;
    left: 0 !important;
    width: 100%;
    font-size: 90%;
  }

  fieldset.search_result {
    margin: 2px;
    padding: 2px;
    border-top: 2px solid #000;
    border-left: none;
    border-right: none;
    border-bottom: none;
  }

  .search_result legend {
    margin-left: 10px;
    padding: 0 5px;
  }

  .search_result .list tr {
    padding: 0;
  }

  .search_result .list td:first-of-type {
    font-size: 110% !important;
    font-weight: bold;
  }
}

/*
====================================================================================================
COMMON CONTENT ELEMENTS
====================================================================================================
*/

