
a[href*="import/download.pdf"] {
  color: #F44000;
  font-size: 1.5em;
}
.maincontent table tr td .image {
  border: 2px solid #435266;
  margin: 0;
  padding: 1px;
}
.image {
  border: medium none;
  margin: 0;
  padding: 0;
}
.logout a {
  color: #B50000;
  padding: 0 0 0 10px;
}


a:hover {
  color: #352608;
  text-decoration: none;
}

#footer {
  background:none repeat scroll 0 0 #F4F4F4;
  border-top: 2px solid #AAAAAA;
  box-shadow: 0 1px 3px #222222;
  clear: both;
  margin: 5em 0 0;
  width: 100%;
  -moz-box-shadow: 0 1px 3px #222222;
  -webkit-box-shadow: 0 1px 3px #222222;
}
#footer ul {
  float: left;
  margin: 10px 0 0 20px;
  min-width: 150px;
  padding: 10px 10px 5px;
  width: auto !important;
}
.footer_wrap {
  position:relative;
}
.footer_wrap > p {
  clear: both;
  padding: 10px 10px 5px;
  text-align: right;
}
#footer li {
  display: block;
  font-size: 10pt;
}
.link_header {
  border-bottom: 1px dashed #555555;
  font-weight: bold;
  margin: 0 0 0 -5px;
}
.password_container {
  background: none repeat scroll 0 0 #EEEEEE;
  box-shadow: 0 4px 8px #222222;
  margin: 10px auto;
  max-width: 710px;
  min-width: 480px;
  padding: 10px;
  position:relative;
  width: 550px;
  -moz-box-shadow: 0 4px 8px #222222;
  -webkit-box-shadow: 0 4px 8px #222222;
  width: 80%;
}
.login_wrap {
  margin: 0 auto;
  padding: 3.5em 0 0;
}

.login_container {
  background: none repeat scroll 0 0 #E5E2DE;
  box-shadow: 0 4px 8px #222222;
  -moz-box-shadow: 0 4px 8px #222222;
  -webkit-box-shadow: 0 4px 8px #222222;
  margin: 0 auto;
  max-width: 1000px;
  padding: 10px;
  width: 70%;
}

.login_content {
  background: none repeat scroll 0 0 #FFFFFF;
  padding: 1em;
}
.login_content h1 {
  color: #2D2D2D;
  font-size: 2.2em;
  font-weight: bold;
  letter-spacing: -1px;
  text-align: center;
  text-shadow: 2px 2px 1px #D6D6D6;
  text-transform: uppercase;
  word-spacing: 0.1em;
}
.login_content h2 {
  text-align: left !important;
  color: #323232;
}
.password_container .login_content {
border: 1px solid #444;
}
.password_container .login_content .password_buttons{
position:absolute;
top:-45px;
}
.password_container .login_content p{
background-color: #FAB32E;
border: 2px dotted #363636;
margin: 0 0.5em 1em;
padding: 1em;
}
.password_container .login_content p {
text-align: center;
}
.password_container .login_content span{
border: none;
border-radius: 8px 8px 0 0;
-moz-border-radius: 8px 8px 0 0;
-webkit-border-radius: 8px 8px 0 0;
float:left;
display: block;
height: 35px;
margin: 0 10px 0 0;
width: auto;
}

.password_container .login_content span.active{
background: white;
padding-bottom: 15px;
border-left: 1px solid #444;
border-right: 1px solid #444;
border-top: 1px solid #444;
}
.password_container .login_content span a{
background: url("../../images/iconset-breathe.png") no-repeat scroll 5px -795px transparent;
display: block;
line-height: 2.5em;
padding: 5px 0 5px 40px;
text-align: center;
}
.password_container .login_content span:hover a {
background: url("../../images/iconset-breathe.png") no-repeat scroll 5px -835px transparent;
}
.password_container .login_content span.change_other_pswd a{
background: url("../../images/iconset-breathe.png") no-repeat scroll 5px -875px transparent;
display: block;
padding: 5px 0 5px 40px;
text-align: left;
}
.password_container .login_content span.change_other_pswd:hover a{
background: url("../../images/iconset-breathe.png") no-repeat scroll 5px -915px transparent;
}
.login_content form{
  margin: 1em 0 0;
}
form.form_inline input {
  display: inline-block;
  margin-bottom: 0;
  vertical-align: middle;
  width: auto;
}
.form_inline label{
  display: inline-block;
  text-align: right;
  width: 35%;
}
form.form_inline span{
  margin-bottom: 1%;
}
form.form_inline .submit_button_login{
  margin-left: 36%;
}
.login_content td input{
display: block;
margin: 0 0 0.5em;
width: auto !important;
}
/*.login_content form table td{
  float:left;
}*/
.login_content a {
  font-size: 11px;
  font-weight: bold;
  margin: 0 0 0 .2em;
  padding: 0.5em;
  text-shadow: 0 1px 0 #FFFFFF;
}
.login_content a:hover {
  color:#AD0000;
}
.password_container .login_content table{
  margin:0;
}
.password_container .login_content table tr td:nth-of-type(2n-1) {
display: inline;
float: left;
padding: 0 0 0 10px;
min-width: 220px;
}
.password_container .login_content table tr td:nth-of-type(2n){
float:left;
display:block;
margin: 0;
}
.password_container .login_content table tr td input{
  width: 100% !important;
}

.required > .fieldWithErrors{
  display: inline;
}
td > label{
  margin: 0 0 0 2px;
}

.label_td.view {
  width: 55%;
}
.widelist {
  width:100%;
}
.field_error {
  color: #CCCCCC;
}
.field_value_error {
  color: #FF0000;
}
.dashboard > *, .show_user > * {
  margin:10px 15px 10px 0;
}

.list .column_1 {
  display: inline;
}
.list .column_2 {
  font-weight: bold;
  float:right;
  margin-left: 10px;
}
.notice_text {
  color:#FF6666;
}


/*

Responsive styles

*/
@media all and (max-width: 800px) {
  .navbar-second-level, .main-wrap{
    border-radius:0;
    -moz-border-radius:0;
    -webkit-border-radius:0;
  }
  .topNavContainer{
    display: block;
    height: 2.7em;
    position: relative;
  }
  .topNavContentContainer{
    width: 95%;
  }
  .topNavContainer input{
    margin-top: 3% !important;
    width: 13em;
  }
  #top-menu-right li:last-of-type{
    line-height: 1.75;
  }
   #top-menu-right li a[onclick] {
    background: url("../../images/iconset-breathe.png") no-repeat scroll center -953px #AD0000;
    text-indent: -9999px;
  }
    #top-menu-right li a[onclick]:hover{
    background: url("../../images/iconset-breathe.png") no-repeat scroll center -953px #DA0000;
  }
  #top-menu-right li a[onclick]{
    line-height: inherit;
    margin: -3px 0 0 0;
    padding: 3px 2px;
    width: 3.25em;
  }
  ul.menu li.login_username_description{
    display: none;
  }
  .login_container{
    margin: 0;
    width: 98%;
  }

  .content_wrapper{
    padding: 2%;
  }
  .maincontent .content_wrapper h1{
    padding-left: 0 !important;
  }
  .maincontent > h1{
    font-size: 180% !important;
    padding: 1.5% 0 0 1.5% !important;
  }
  .maincontent .dashboard{
    width: 100%;
  }
  .main-wrap > h1{
    margin-top: 0 !important;
    padding: 1% 0 0 1%;
  }
  .content-box h3, .show_user h3{
    padding:1.5%;
  }
  div.organization{
    width: 100%;
  }
  table.list{
    width: 100%;
  }
  .message_error, .message_notice, .message_success, .notice, .message_alert{
    margin: 2% 2.5% 1% 2.5% !important;
  }

  #this_school_admin_users .row, #other_admin_users .row{
    padding: 1% 2% !important;
  }
  .required_info{
    margin-left: 2%;
  }
  .pdf_info{
    margin: 0;
  }
  p.pdf_info{
    font-size: 115%;
  }
  .responsive_padding2{
    padding: 2%;
  }
  #top-menu > li > ul{
    top:98%;
  }
}
@media screen and (orientation: portrait) and (max-device-width: 800px){
  .main-wrap > h1{
    margin-top: 1.2em !important;
  }
  div:not(.navbar-second-level) .maincontent:first-of-type {
    margin: 1em 0 0 !important;
  }
  .maincontent{
    padding-top: 4% !important;
  }
}
@media screen and (orientation: landscape) and (max-device-width: 960px){
  div:not(.navbar-second-level) .maincontent:first-of-type {
    margin: 2em 0 0 !important;
  }
  .main-wrap{
    margin: 3em 0 0 !important;
  }
}
@media screen and (orientation: portrait) and (max-device-width: 540px){
  div:not(.navbar-second-level) .maincontent:first-of-type {
    margin: 1em 0 0 !important;
  }
  .main-wrap{
    margin: 3em 0 0 !important;
  }
}
@media all and (max-width:540px){
  #top-menu{
    padding: 0;
  }
  #top-menu > li{
    margin-right: 5px;
  }
  #top-menu > li.organisation-menu-button, #top-menu > li.school-menu-button{
    margin-right: 7px;
  }
  #top-menu-right .login_username{
    display: none;
  }
  #top-menu-right li a[onclick] {
    background: url("../../images/iconset-breathe.png") no-repeat scroll center -955px #AD0000;
    text-indent: -9999px;
  }
  #top-menu-right li a[onclick]:hover{
    background: url("../../images/iconset-breathe.png") no-repeat scroll center -955px #DA0000;
  }
  .main-wrap > h1{
    margin-top: 0 !important;
  }
  .mass_import_info span {
    display: block;
  }
  img{
    max-width: 97.5%;
  }
}
@media all and (min-width:890px){
  .password_container .login_content table tr td:nth-of-type(2n){
    width:430px;
  }
  .password_container .login_content table tr:last-of-type td {
      float: none;
      margin: 0 75px 0 230px;
      width:440px;
  }
}
@media all and (max-width:890px) {
  .password_container .login_content table tr td:nth-of-type(2n){
    float:none;
  }
  .password_container .login_content table{
    width:100%;
  }
}
