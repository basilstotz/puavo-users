@import 'nib'
@import 'base_styles/mediaqueries'

form
  tr
    display table-row
    margin 0 0 5px
    overflow hidden
    text-overflow clip
    white-space nowrap
    width 100%
    td
      margin 0
      padding 0
    td:first-child
      text-align right
      padding-right 1em
      width 20%

form table tr:before,
form table tr:after
  display table
  line-height 0
  content ""

.rename_group_old_name
  text-align right
  width 35%

.rename_group_new_name
  width 60%

.rename_group_name_abbr
  width 45%

table
  &.new_groups_table
    tr
      td
        text-align left !important

.external_services_system_groups
  div
    word-wrap break-word

.submit_button_container
  margin-left 26.2345%

.submit_button_container_no_margin
  margin-left 0

form[action$="users/import"]
  .submit_button_container
    margin-left 0

.external_service
  margin-left 20%

#device_puavoDeviceXrandr input,
#device_macAddress input,
#server_puavoExport_list input
  display block

.purchase_date
  select
    width auto

label
  font-weight bold
  &.checkbox
    font-size 100%
    font-weight normal

fieldset
  padding 1.4em
  margin 0 0 1.5em 0
  border 1px solid #ccc

legend
  font-weight bold
  font-size 120%

form input
  background-color #FFFFFF
  border 1px solid #cccccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
  font-size 120%
  margin 0 0 2%
  padding 7px 8px
  width 100%

table .fieldWithErrors input, table .fieldWithErrors select
  border-color #F66

form
  &.inline
    line-height 3
    p
      margin-bottom 0

.new_external_service table, .edit_external_service table
  width 80%

.maincontent form.new_external_service table tr td:nth-child(even), .maincontent form.edit_external_service table tr td:nth-child(even)
  width 73%

.maincontent form.new_external_service table tr td:nth-child(odd), .maincontent form.edit_external_service table tr td:nth-child(odd)
  padding-right 1.25%
  width 22%

input[type="file"]
  border none
  box-shadow none
  color initial
  display inline-block
  width auto

input[type="submit"]
  cursor pointer
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)
  background none repeat scroll 0 0 #EEEEED
  background-image linear-gradient(#FFFFFF 0%, #EEEEED 100%)
  border 1px solid #222222
  border-radius 4px
  cursor pointer
  font-size 140%
  height 70px
  margin 5px 0 0
  max-width 333px
  padding 5px 8px
  vertical-align middle
  width 50%

input[type="submit"]:hover
  background none repeat scroll 0 0 #EEEEEE
  background-image linear-gradient(rgb(255,255,255) 0%,rgb(238,238,237) 100%)
  border 1px solid #5897FB

input[type="text"]:focus,
input[type="password"]:focus,
input.text:focus,
input.title:focus,
textarea:focus,
select:focus
  border 1px solid #5897FB
  color #222

textarea
  width 450px
  height 250px
  padding 5px

input[type=checkbox],
input[type=radio],
input.checkbox,
input.radio
  border none
  display inline-block
  margin 5px
  position relative
  top 0
  width auto

#user_mail_list
  input
    display block
    margin 0 0 5px

#user_telephoneNumber_list
  input
    display block
    margin 0 0 5px

@media screen-breakpoint-one
  form table not(.validate_users_list) th,
  form table:not(.validate_users_list) td,
  form table:not(.validate_users_list) caption
    float left
    display block !important
    text-align left !important
    width 100% !important

  form
    table
      &.autopoweroff_organisation
        tr
          td
            width auto !important
      &:not(.validate_users_list)
        tr
          display block !important
          position relative
    &.form_inline
      padding 2% 0
      .submit_button_login
        margin 5% 0 0
      input
        max-width 100%
        min-height 50px
        width 98%

  form
    input
      width 95%
    input[type="submit"]
      width 50%

  form table, .new_external_service table, .edit_external_service table
    padding-left 2%
    width 100%

  .new_external_service tr td:nth-child(even), .new_external_service tr td:nth-child(odd), .edit_external_service tr:nth-child(even), .edit_external_service tr:nth-child(odd)
    width 95% !important

  .label_td
    &.view
      width 35%

  table#autopoweroff
    th
      display inline-block !important
      width auto !important
    td
      &.checkbox
        display inline-block !important
        width 10% !important
        text-align center !important
      table
        width 95%
        td
          width 30% !important

  .show_user
    table
      &.list
        td
          display inline-block
          &.value_td
            padding-left 1em
            text-align left !important

  .mass_import_info, .mass_import_info_text
    padding 2%

  form[action$="import/validate"] p, form[action$="import/refine"] p, form[action$="import/refine"] pre
    padding 0 0 0 2%

  .mass_import_form
    width 90% !important
    input
      margin-left 2%

  textarea#raw_users
    margin-left 2%
    width 90% !important

  form table.import_define th, form table.import_define td
    width 45% !important
    display inline-block

  .submit_button_container
    margin-left 2% !important

  .btn
    font-size 100% !important

  .form_inline
    & > *
      padding 0 2%
    label
      display block
      font-size 120%
      text-align left

  form.new_device h2, form.edit_device h2, form.edit_server h2
    padding 0 2%

  form table.rename_groups_roles_table tr th, form table.rename_groups_roles_table tr td
    width 45% !important

  #other_groups td, #member_groups td
    line-height 3