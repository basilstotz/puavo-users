@import 'nib'
@import 'colors'

// Buttons
.btn
  display inline-block
  *display inline
  background-color buttonBg
  *background-color buttonBg
  background-image linear-gradient(buttonBg 0%, buttonGradientBg 100%)
  background-repeat repeat-x
  border 1px solid #cccccc
  *border 0
  border-color buttonBorderHexColor buttonBorderHexColor buttonBorderHexColor2
  border-color buttonBorderColor buttonBorderColor buttonBorderColor2
  border-radius 4px
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)
  color #333333
  cursor pointer
  font-size 100%
  margin-bottom 0
  *margin-left .3em
  text-align center
  vertical-align middle
  *zoom 1
  padding 4px 12px

.btn:hover, .btn:focus
  background-color buttonGradientBg
  background-image none
  color buttonHoverColor
  text-decoration none

.btn-danger
  color rgb(255, 255, 255)
  background-color buttonDangerBgColor
  background-image linear-gradient(top, buttonDangerBgImage, buttonDangerGradientBgImage)

.btn-danger:hover, .btn-danger:focus, .btn-danger:active
  color rgb(255, 255, 255)
  background-color buttonDangerHoverBg
  background-image none

table .btn
  font-weight normal
  display block
  text-decoration none
