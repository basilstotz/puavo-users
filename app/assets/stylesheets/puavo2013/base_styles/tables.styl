@import 'nib'

table {
  border-collapse: collapse;
}

th, td {
  vertical-align: middle;
  margin: 0;
  padding: 6px;
}

th {
  font-size: 110%;
  text-align: left;
  text-decoration: none;
}

th a, td a {
  font-weight: bold;
}

.mountPoints td, .mountPoints th {
  border: none;
}

.mountPoints th {
  text-align: center;
  background: #ccc;
}

.groupRenameTable th {
  text-align: left;
  background: #ccc;
}
