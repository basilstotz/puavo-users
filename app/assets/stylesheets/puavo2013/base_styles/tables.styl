@import 'nib'

table, tbody
  display block

table, th, td
  vertical-align middle

table
  border-collapse collapse
  thead
    th
      background #c3d9ff
  tfoot
    font-style italic
  th,td
    padding 6px
    text-align left
  th
    text-decoration none
    font-size 110%
    font-weight bold
  td
    & > label
      margin 0 0 0 2px
  &.new_groups_table
    tr
      td
        text-align left
  a
    font-weight bold
    text-decoration underline

  &.list
    border-spacing 0
    margin-right 1em
    .column_1
      display inline
    .column_2
      font-weight bold
      float right
      margin-left 10px
    th
      font-size 100%
      padding-bottom 10px
      padding-top 10px
      word-wrap break-word

.list tr:nth-child(even), .content-box table tr:nth-child(even)
  background none repeat scroll 0 0 #FAFAFA

.list tr:nth-child(odd), .content-box table tr:nth-child(odd)
  background none repeat scroll 0 0 #F1F1F1

.show_user
  td
    border none
    display inline-block
    word-wrap break-word
    width 40%
    &.value_td
      width 50%

.refine_example
  color black

table#autopoweroff
  td
    display table-cell
    text-align left
    &.label_td
      padding-top 20px
      label
        font-weight normal
    select
      width auto

.search_result
  td
    border-bottom 1px solid #AAAAAA
    width 33.333%

.required
  & > .fieldWithErrors
    display inline

.label_td
  &.view
    width 55%

.widelist
  width 100%

.dashboard > *, .show_user > *
  margin 10px 15px 10px 0

.list
  .column_1
    display inline
  .column_2
    font-weight bold
    float right
    margin-left 10px

@media screen-breakpoint-one
  table
    &#autopoweroff
      padding 0
      th, td
        display inline-block
        min-width 50px
        width auto
      td
        &.checkbox
          display inline-block
          width 10%
          text-align center