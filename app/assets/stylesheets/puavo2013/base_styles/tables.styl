@import 'nib'

table, th, td
  vertical-align middle

table
  border-collapse collapse
  a
    font-weight bold
    text-decoration underline
th
  text-decoration none
  font-size 110%
  font-weight bold

thead
  th
    background #c3d9ff

th,td
  padding 6px

tr
  &.even
    td
      background #e5ecf9

.import_define th, .import_define td
  float left
  width 35% !important

.wrap
  .maincontent
    form
      table
        tr
          td
            &.refine_example
              color black

tfoot
  font-style italic