@import 'nib'
@import 'base_styles/colors'

// base_styles -->
h1, h2, h3, h4, h5, h6
  color baseFont

// make long device pages easier to read
h2 { border-bottom: 1px dashed #000; margin-top: 25px; }

h3 { border-bottom: 1px dotted #000; }

// Forms
/*
form
  input
    background-color white
    border 1px solid formElementBorderColor
    border-radius 4px
    box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
  select
    background-color white
    border 1px solid formElementBorderColor
  .field_with_errors
    input, select
      border 1px solid errorRed
*/

input[type="submit"] {
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  background: none repeat scroll 0 0 #eeeeed;
  background-image: linear-gradient(white 0%, #eeeeed 100%);
  cursor: pointer;
}

input[type="submit"]:hover {
    background: none repeat scroll 0 0 #eee;
    background-image: linear-gradient(white 0%, rgb(238, 238, 237) 100%);
    border: 1px solid focusColor;
}

label
  color #222222
  &.label_error
    color errorRed

.required_info
  color errorRed

.required:after
  color errorRed

// End of forms

fieldset {
  border: 1px solid #ccc;
}

.field_error {
  color: #f00;
  font-weight: bold;
  display: block;
}

.field_value_error
  color errorRed

.notice_text
  color errorRed

// End of tables

// Buttons
.btn
  background-color buttonBg
  *background-color buttonBg
  background-image linear-gradient(buttonBg 0%, buttonGradientBg 100%)
  background-repeat repeat-x
  border 1px solid #cccccc
  *border 0
  border-color buttonBorderHexColor buttonBorderHexColor buttonBorderHexColor2
  border-color buttonBorderColor buttonBorderColor buttonBorderColor2
  border-radius 3px
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)
  color #333333

.btn:hover, .btn:focus
  background-color buttonGradientBg
  background-image none
  color buttonHoverColor

.btn-danger
  color rgb(255, 255, 255)
  background-color buttonDangerBgColor
  background-image linear-gradient(top, buttonDangerBgImage, buttonDangerGradientBgImage)

.btn-danger:hover, .btn-danger:focus, .btn-danger:active
  color rgb(255, 255, 255)
  background-color buttonDangerHoverBg
  background-image none
// End of Buttons

// Alerts
.message_error,
.message_notice,
.message_success,
.notice,
.message_alert
  border 2px solid #ddd

.message_error, .message_alert
  background none repeat scroll 0 0 #AD0000
  border 1px solid #AAAAAA
  border-radius 4px
  color #F4F4F4

.message_notice, .notice
  background none repeat scroll 0 0 #86B410
  border 1px solid #56340E
  border-radius 4px

.message_success
  background #E6EFC2
  color #264409
  border 1px solid #C6D880
  a
    color #264409

.message_error
  a
    color errorRed

.message_notice a,
.message_alert a
  color #514721

.notice
  a
    color #514721

.message-info
  background-color infoBgColor
  border 2px dotted baseBoxShadowBorderColor

.invalid
  color errorRed

// End of Alerts

// End of base_styles

body
  background none repeat scroll 0 0 baseBg

.main-wrap
  background none repeat scroll 0 0 baseBg
  border 5px solid #3E3E2D
  border-radius 10px 10px 0 0
  box-shadow 0px 15px 15px rgba(68, 68, 68, 0.70)

.maincontent
  background-color white
  border-bottom 1px solid baseBoxShadowBorderColor
  border-left 1px solid baseBoxShadowBorderColor
  border-right 1px solid baseBoxShadowBorderColor
  border-radius 0 0 4px 4px
  > h1 span
    border-bottom 1px solid baseBoxShadowBorderColor

// topmenu
.topmenu
  background-color baseOrangeGradient
  background-image linear-gradient(baseOrange 0% ,baseOrangeGradient 100%)
  border-bottom 1px solid baseBoxShadowBorderColor
  box-shadow 2px 4px 6px rgba(68, 68, 68, 0.80)
  .top-menu-item
    border-top 1px solid #E6E6E6
    a
      &:hover
        background-color #f4f4f4
        border-radius 0 8px 8px 0
    &:first-child
      border-top medium none
  input
    border 1px solid formElementBorderColor
    border-radius 4px
.topmenu-left
  li
    ul
      background-color baseOrangeGradient
      border-bottom 1px solid #222
      border-left 1px solid #222
      border-right 1px solid #222
      border-radius 0 0 4px 4px
      li
        &:hover
            .school_submenu
              background none repeat scroll 0 0 #F59545
              border medium none
              border-radius 0 0 6px 0
  .last_one
    background none repeat scroll 0 0 transparent
    border medium none
  .school_submenu
    li
      border-top 1px solid #E6E6E6
.menu
  li
    span
      &.sub
        color #222222
    &.last
      a
        background none repeat scroll 0 0 transparent
    &.active
      a
        color #B6E3EC
    li
      border-left 1px solid creamWhite
      border-right 1px solid creamWhite
      &.last
        border-bottom 1px solid creamWhite
    ul
      border-top 1px solid creamWhite
      list-style none outside none
      ul
        background-color white

// end of topmenu

.content-box
  background none repeat scroll 0 0 rgb(250, 250, 250)
  background-image linear-gradient(rgb(250, 250, 250) 0%, rgb(247,247,247) 100%)
  border-radius 4px
  box-shadow inset 0 0 10px rgba(237, 113, 19, 0.25)
  &.school_image
    background none repeat scroll 0 0 transparent
    background-image none
    border 0 none
    border-radius 0
    box-shadow none
  h4
    border-bottom 2px solid
  .row
    &:not(:first-of-type)
      border-top 1px solid #AAAAAA
    &:empty
      border none

  h3, .show_user h3
    background-color baseBrown
    background-image linear-gradient(baseBrownGradient 0%, baseBrown 100%)
    border-radius 3px 3px 0 0
    color rgb(245,245,245)

// main-navigation
.navbar-first-level
  .current_page_item
    background-color baseBrown
    background-image linear-gradient(baseBrown 0%, baseBrownGradient 100%)
    border-left 1px solid baseBoxShadowBorderColor
    border-right 1px solid baseBoxShadowBorderColor
    border-top 1px solid baseBoxShadowBorderColor
    a
      color creamWhite
  ul > li
    &:hover
      background none repeat scroll 0 0 baseBrown
      background-image linear-gradient(baseBrown 0%, baseBrownGradient 100%)
  .last_one
    background none repeat scroll 0 0 transparent
    border medium none
  li
    background-color baseOrange
    background-image linear-gradient(baseOrange 0% ,baseOrangeGradient 100%)
    border-radius 4px 4px 0 0

.navbar-second-level
  background-color baseBrown
  background-image linear-gradient(baseBrownGradient 35%, baseBrown 60%)
  border 1px solid baseBoxShadowBorderColor
  border-radius 0 4px 0 0
  .current a, a:hover
    background-color white
    border-left 1px solid baseBoxShadowBorderColor
    border-radius 4px 4px 0 0
    border-right 1px solid baseBoxShadowBorderColor
    border-top 1px solid baseBoxShadowBorderColor
    color #4A4D4A
  li
    a
      border-radius 10px 10px 0 0
      border 1px solid transparent
      color #E6E6D8
      &:hover
        color #222222

// end of main-navigation

// tools
.tools
  a
    text-decoration none
    &:hover
      color #222
  .tool
    span
      &:hover
        cursor pointer
    ul
      background #fff
      border 1px solid #AAAAAA
      li
        margin 2px
        background none repeat scroll 0 0 #FFFFFF
        &:hover
          background none repeat scroll 0 0 #C0772F

// End of .tools

// login

.login_container
  background none repeat scroll 0 0 baseBg
  box-shadow 0 4px 8px baseBoxShadowBorderColor
  .login_content
    background none repeat scroll 0 0 white
  h1
    color #2D2D2D
  h2
    color #323232
  a
    &:hover
      color #AD0000

.password_container
  background-color baseBrown
.login_content
  background-color white
  span
    border 1px solid transparent
    border-radius 4px 4px 0 0
  .message_alert
    background-color errorRed

  .password_buttons span
    background none repeat scroll 0 0 #FAB32E
    background-image linear-gradient(baseOrange 0% ,baseOrangeGradient 100%)
    border-bottom none
    &.active, &:hover
      background none repeat scroll 0 0 baseBrown
      background-image linear-gradient(baseBrownGradient 0%, baseBrown 100%)
      a
        color white
// end of login

// password



// end of password

.link_header
  border-bottom 1px dashed #555555
  font-weight bold

.search_result
  td
    border-bottom 1px solid #AAAAAA

// markdown
.markdown
  h1,h2,h3,h4,h5,h6,p
    background-color transparent
    background-image none
    color baseFont
// end of markdown

@media screen-breakpoint-one
  .main-wrap, .login_container, .navbar-second-level
    border solid 1px transparent
  .maincontent
    border none
    border-radius 0
  .content-box, .user_box, .content-box h3, .show_user h3
    border-radius 0

  table
    &.list
      tr
        border-bottom 1px solid baseBoxShadowBorderColor
        &:nth-child(2)
          border-top 1px solid baseBoxShadowBorderColor
      th
        display none
      td
        border-bottom none
  .login_content
    .password_buttons
      span, span.active
        border-radius 4px
