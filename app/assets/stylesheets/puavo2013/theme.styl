@import 'nib'
@import 'colors'
@import 'base_styles/mediaqueries'

body
  background none repeat scroll 0 0 baseBg
  background-image linear-gradient(baseGradientBg 0%, baseBg 100%)

.main-wrap
  background none repeat scroll 0 0 #f2f0e6
  border 5px solid #3E3E2D
  border-radius 10px 10px 0 0
  box-shadow 0px 15px 15px rgba(68, 68, 68, 0.70)

.maincontent
  background-color #FFFFFF
  border-bottom 1px solid #222222
  border-left 1px solid #222222
  border-right 1px solid #222222
  border-radius 0 0 4px 4px

.topNavContainer
  background none repeat scroll 0 0 rgb(245,149,69)
  background-image linear-gradient(rgb(250,179,46) 0% ,rgb(245,149,69) 100%)
  box-shadow 2px 4px 6px rgba(68, 68, 68, 0.80)
  height auto
  margin 0
  min-width 315px
  position fixed
  top 0
  width 100%
  z-index 9999
  box-shadow 2px 4px 6px rgba(68, 68, 68, 0.80)

#top-menu > li > ul
  background none repeat scroll 0 0 rgb(245,149,69)

.content-box
  background none repeat scroll 0 0 rgb(250, 250, 250)
  background-image linear-gradient(rgb(250, 250, 250) 0%,rgb(247,247,247) 100%)
  border-radius 4px
  box-shadow inset 0 0 10px rgba(237, 113, 19, 0.25)
  &.school_image
    background none repeat scroll 0 0 transparent
    background-image none
    border 0 none
    border-radius 0
    box-shadow none
  h4
    border-bottom 2px solid
  .row
    &:not(:first-of-type)
      border-top 1px solid #AAAAAA
    &:empty
      border none

  h3, .show_user h3
    background none repeat scroll 0 0 #A36A2A
    background-image linear-gradient(rgb(186,114,45) 0%, rgb(153,106,42) 100%)
    border-radius 3px 3px 0 0
    color rgb(245,245,245)

// .tools ->
.tools
  a
    &:hover
      color #222
    &.show
      background-position left -310px
      &:hover
        background-position left -350px
  > div, .sub-tools > li
    border-bottom 1px dashed #ECEADA
  .tool
    span
      background-position center -630px
      &:hover
        background-position center -670px transparent
        cursor pointer
    ul
      border 1px solid #AAAAAA
      li
        background none repeat scroll 0 0 #FFFFFF
        &:hover
          background none repeat scroll 0 0 #C0772F

  a[href$="edit"]
    background-position left 10px
  a[href$="edit"]:hover
    background-position left -30px
  a[data-method="delete"]
    background-position left -70px
  a[data-method="delete"]:hover
    background-position left -110px
  .videolink
    background-position left -235px
    &:hover
      background-position left -275px
  a[href$="import/new"]
    background-position left -470px
  a[href$="import/new"]:hover
    background-position left -510px

.tools .sub-tools > li:hover,
.tools > div:hover
  background none repeat scroll 0 0 #C0772F
  border-radius 6px 6px 0 0
.tool
  span
    img
      margin 0 0 0 5px

.tools a[href$="select_school"],
.maincontent .tools a[href$="rename_groups/new"]
  background-position left -150px

.tools a[href$="select_school"]:hover,
.maincontent .tools a[href$="rename_groups/new"]:hover
  background-position left -190px

.tools a[href$="users/new"],
.tools a[href$="external_services/new"],
.tools a[href$="schools/new"],
.tools a[href$="roles/new"],
.tools a[href$="groups/new"]
  background-position left -390px

.tools a[href$="users/new"]:hover,
.tools a[href$="external_services/new"]:hover,
.tools a[href$="schools/new"]:hover,
.tools a[href$="roles/new"]:hover,
.tools a[href$="groups/new"]:hover
  background-position left -430px

// End of .tools

// Forms
form
  input
    background-color white
    border 1px solid formElementBorderColor
    border-radius 4px
    box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
  select
    background-color white
    background-image linear-gradient(white 0%, rgb(240,240,240) 100%)
    border 1px solid formElementBorderColor
  .field_with_errors
    input, select
      border 1px solid errorRed

label
  &.label_error
    color errorRed

.required_info
  color errorRed

.required::after
  color errorRed

// End of forms

// Tables
table
  tr
    &.even
      td
        background #e5ecf9
  &.list
    tr
      &:hover
        background #F9F7E6
    td
      border-bottom 1px solid #AAAAAA
    th
      background none repeat scroll 0 0 #A36A2A
      background linear-gradient(#A36A2A 35%, #BA722D 60%) repeat scroll 0 0 transparent
      border-bottom 1px solid #222222
      color #F5F5E8

// End of tables

@media screen-breakpoint-one
  .main-wrap, .login_container
    border none
  .maincontent
    border none
    border-radius 0
  .content-box, .user_box, .content-box h3, .show_user h3
    border-radius 0