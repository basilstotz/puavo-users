@import 'nib'
@import 'colors'

body
  background none repeat scroll 0 0 baseBg
  background-image linear-gradient(baseGradientBg 0%, baseBg 100%)

.container_wrap
  background none repeat scroll 0 0 #f2f0e6
  border 5px solid #3E3E2D
  border-radius 10px 10px 0 0
  box-shadow 0px 15px 15px rgba(68, 68, 68, 0.70)


.topNavContainer
  background none repeat scroll 0 0 rgb(237, 113, 19)
  background-image linear-gradient(rgb(245, 149, 69) 0%, rgb(237, 113, 19) 100%)
  box-shadow 2px 4px 6px rgba(68, 68, 68, 0.80)
  height auto
  margin 0
  min-width 315px
  position fixed
  top 0
  width 100%
  z-index 9999
  box-shadow 2px 4px 6px rgba(68, 68, 68, 0.80)

