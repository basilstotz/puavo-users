@import 'nib'

label
  font-weight bold

fieldset
  padding 1.4em
  margin 0 0 1.5em 0
  border 1px solid #ccc

legend
  font-weight bold
  font-size 120%

form input[type="text"],input[type="password"], input.text, input[type="email"], form tr td input[type="tel"]
  background-color #FFFFFF
  border 1px solid #cccccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
  font-size 120%
  margin 0 0 2%
  padding 7px 8px
  width 100%

table .fieldWithErrors input, table .fieldWithErrors select
  border-color #F66

form
  &.inline
    line-height 3
    p
      margin-bottom 0

.new_external_service table, .edit_external_service table
  width 80%

.wrap form.new_external_service table tr td:nth-child(even), .wrap form.edit_external_service table tr td:nth-child(even)
  width 73%

.wrap form.new_external_service table tr td:nth-child(odd), .wrap form.edit_external_service table tr td:nth-child(odd)
  padding-right 1.25%
  width 22%

input[type="file"]
  color initial

input[type="submit"]
  cursor pointer
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)
  background none repeat scroll 0 0 #EEEEED
  background-image linear-gradient(#FFFFFF 0%, #EEEEED 100%)
  border 1px solid #222222
  border-radius 4px
  cursor pointer
  font-size 140%
  height 70px
  margin 5px 0 0
  max-width 333px
  padding 5px 8px
  vertical-align middle
  width 50%

input[type="submit"]:hover
  background none repeat scroll 0 0 #EEEEEE
  background-image linear-gradient(rgb(255,255,255) 0%,rgb(238,238,237) 100%)
  border 1px solid #5897FB

input[type="text"]:focus,
input[type="password"]:focus,
input.text:focus,
input.title:focus,
textarea:focus,
select:focus
  border 1px solid #5897FB
  color #222

textarea
  width 450px
  height 250px
  padding 5px

input[type=checkbox],
input[type=radio],
input.checkbox,
input.radio
  margin 5px
  position relative
  top 0