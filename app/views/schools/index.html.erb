<h1><%= t('.title') %></h1>

<table class="list">
  <tr>
    <th><%= t('activeldap.attributes.school.displayName') %></th>
    <th><%= t('activeldap.attributes.school.cn') %></th>
    <th colspan="2"><%= t('.actions') %></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= link_to school.displayName, school_path(school) %></td>
    <td><%=h school.cn %></td>
    <td><%= link_to t('link.edit'), edit_school_path(school) %></td>
    <td><%= link_to t('link.destroy'), school, :confirm => t('general_confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('link.new_school'), new_school_path %>
