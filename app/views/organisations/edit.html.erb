<h1><span><%= t('.title') %></span></h1>

<%= form_for(@organisation, :url => organisation_path)  do |f| %>
<table>
  <tr>
    <td><%= f.label :o %></td>
    <td><%= f.text_field :o %></td>
  </tr>
  <tr>
    <td><%= f.label :puavoEduOrgAbbreviation %></td>
    <td><%= f.text_field :puavoEduOrgAbbreviation %></td>
  </tr>
  <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
    <td><%= f.label :telephoneNumber %></td>
    <td><%= f.text_field :telephoneNumber %></td>
  </tr>
  <tr>
    <td><%= f.label :facsimileTelephoneNumber %></td>
    <td><%= f.text_field :facsimileTelephoneNumber %></td>
  </tr>
  <tr>
    <td><%= f.label :l %></td>
    <td><%= f.text_field :l %></td>
  </tr>
  <tr>
    <td><%= f.label :street %></td>
    <td><%= f.text_field :street %></td>
  </tr>
  <tr>
    <td><%= f.label :postOfficeBox %></td>
    <td><%= f.text_field :postOfficeBox %></td>
  </tr>
  <tr>
    <td><%= f.label :postalAddress %></td>
    <td><%= f.text_field :postalAddress %></td>
  </tr>
  <tr>
    <td><%= f.label :postalCode %></td>
    <td><%= f.text_field :postalCode %></td>
  </tr>
  <tr>
    <td><%= f.label :st %></td>
    <td><%= f.text_field :st %></td>
  </tr>
  <tr>
    <td><%= f.label :puavoLocale %></td>
    <td>
      <%= f.select :puavoLocale,
          locales_for_select %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :puavoTimezone %></td>
    <td>
      <%= f.select :puavoTimezone,
          timezones_for_select(f.object.puavoTimezone) %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :puavoKeyboardLayout %></td>
    <td><%= f.text_field :puavoKeyboardLayout %></td>
  </tr>
  <tr>
    <td><%= f.label :puavoKeyboardVariant %></td>
    <td><%= f.text_field :puavoKeyboardVariant %></td>
  </tr>

  <%= render( :partial => 'shared/form_boolean_attribute',
              :locals => {
                :f => f,
                :attribute => :puavoAutomaticImageUpdates } ) %>

  <tr>
    <td><%= f.label :eduOrgHomePageURI %></td>
    <td><%= f.text_field :eduOrgHomePageURI %></td>
  </tr>

  <%= render( :partial => 'shared/form_auto_power_off_settings',
              :locals => {
                :f => f } ) %>

  <tr>
    <td><%= f.label :puavoDeviceImage %></td>
    <td><%= f.text_field :puavoDeviceImage %></td>
  </tr>

  <tr>
    <td>
      <%= f.label :puavoImageSeriesSourceURL %>
    </td>
    <td>
      <%= multiple_text_field(f.object, "puavoImageSeriesSourceURL", t('shared.add_puavoImageSeriesSourceURL')) %>
    </td>
  </tr>

  <!-- < %= render :partial => 'shared/form_allow_guest_and_personal_device', :locals => { :f => f } % > -->

  <tr>
    <td class="label_for_input_text_list">
      <%= f.label :puavoBillingInfo %>
    </td>
    <td>

    <div id="organisation_puavoBillingInfo">
      <% if Array(f.object.puavoBillingInfo).empty? %>
        <input name='ldap_organisation[puavoBillingInfo][]' type='text' />
      <% else %>
        <% Array(f.object.puavoBillingInfo).each_index do |index| %>
          <input name='ldap_organisation[puavoBillingInfo][]' type='text' value='<%= Array(f.object.puavoBillingInfo)[index] %>' />
        <% end %>
      <% end %>
    </div>
    <%= link_to "#", class: "clone_prev_input_element btn" do %>
      <i class="icon-plus"></i><%= t('.add_puavo_billing_info') %>
    <% end %>

    </td>
  </tr>
  <tr>
    <td></td>
    <td>
      <%= f.submit t('link.update'), class: 'btn' %>
      <div class="cancel"><%= link_to t('link.cancel'), organisation_path, class: 'btn btn-danger' %></div>
    </td>
  </tr>
</table>

<% end %>
