<!-- shared/_allow_guest_and_personal_device starts -->
<tr>
  <th><%= t("activeldap.attributes.#{object.class.to_s.downcase}.puavoAllowGuest") %></th>
  <td><%= translate_boolean_value(object.puavoAllowGuest) %></td>
</tr>

<% if [School, LdapOrganisation].include?(object.class) || ( object.class == Device && object.puavoDeviceType == "laptop" ) %>
<tr>
  <th><%= t("activeldap.attributes.#{object.class.to_s.downcase}.puavoPersonalDevice") %></th>
  <td><%= translate_boolean_value(object.puavoPersonalDevice) %></td>
</tr>
<% end %>
<!-- shared/_allow_guest_and_personal_device ends -->
