<tr>
  <td class="label_td"><%= f.label attribute %></td>
  <td>
    <table class="table-in-table">
      <tr>
	<td class="label_td">
	  <%= f.label t("helpers.default"), :for => "#{ f.object.class.to_s.downcase }_#{ attribute }_" %>
	</td>
	<td class="label_td">
	  <%= f.label t("helpers.boolean_true"), :for => "#{ f.object.class.to_s.downcase }_#{ attribute }_true" %>
	</td>
	<td class="label_td">
	  <%= f.label t("helpers.boolean_false"), :for => "#{ f.object.class.to_s.downcase }_#{ attribute }_false" %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.radio_button attribute, "" %>
	</td>
	<td>
	  <%= f.radio_button attribute, true %>
	</td>
	<td>
	  <%= f.radio_button attribute, false %>
	</td>
      </tr>
    </table>
  </td>
</tr>
