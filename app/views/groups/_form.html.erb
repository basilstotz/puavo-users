<p class="required_info"><%= t('layouts.forms.required_field')%></p>
<%= form_for(@group, url: path, html: { method: method } ) do |f| %>

<% if @group.puavoEduGroupType == "course group" %>
<p class="courseWarning"><%= t('groups.edit.course_group_warning') %>
<% end %>

<table>
  <tr>
    <td class="required"><%= f.label :displayName %></td>
    <td><%= f.text_field :displayName %></td>
  </tr>

  <tr>
    <td class="required"><%= f.label :cn %></td>
    <td><%= f.text_field :cn %></td>
  </tr>

<% if current_user.organisation_owner? %>
  <tr class="ownersOnly">
    <td><%= f.label :puavoExternalId %></td>
    <td><%= f.text_field :puavoExternalId %></td>
  </tr>
<% end %>

  <tr>
    <td class="required"><%= f.label :puavoEduGroupType %></td>
    <td><%= f.select :puavoEduGroupType, group_types_for_select %></td>
  </tr>

  <tr>
    <td></td>
    <td>
      <span>
        <%= f.submit submit_text, class: 'btn' %>
        <div class="cancel"><%=link_to t('link.cancel'),  path, class: 'btn btn-danger' %></div>
      </span>
    </td>
  </tr>
</table>
<% end %>
