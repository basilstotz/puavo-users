<h1><%= t('.title') %></h1>

<% form_for(@user, :url => password_path(@school), :html => { :method => :put })  do |f| %>
<%= f.error_messages %>

<p>
  <%= label :login, :username, t('activeldap.attributes.user.uid') %><br />
  <%= text_field :login, :username %>
</p>

<p>
  <%= label :login, :password, t('.password') %><br />
  <%= password_field :login, :password %>
</p>

<p>
  <%= f.label :new_password, t('activeldap.attributes.user.new_password') %><br />
  <%= password_field :user, :new_password, :value => "" %>
</p>

<p>
  <%= f.label :new_password_confirmation, t('activeldap.attributes.user.new_password_confirmation') %><br />
  <%= password_field :user, :new_password_confirmation, :value => "" %>
</p>

<p>
  <%= f.submit t('link.change_password') %>
</p>
<% end %>
