<h1>Listing courses</h1>

<table>
  <tr>
    <th>Puavocoursename</th>
    <th>Puavocourseid</th>
    <th>Puavocoursedescription</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.puavoCourseName %></td>
    <td><%=h course.puavoCourseId %></td>
    <td><%=h course.puavoCourseDescription %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New course', new_course_path %>