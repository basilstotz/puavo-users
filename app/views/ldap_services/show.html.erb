<table>
  <tr>
  <td class="label_td view"><%= label "ldap_service", "uid" %></td>
  <td class="value_td"><%= @ldap_service.uid %></td>
  </tr>

  <tr>
  <td class="label_td view"><%= label "ldap_service", "description" %></td>
  <td class="value_td"><%= @ldap_service.description %></td>
  </tr>

  <tr>
  <td class="label_td view"><%= label "ldap_service", "dn" %></td>
  <td class="value_td"><%= @ldap_service.dn.to_s %></td>
  </tr>

  <tr>
  <td class="label_td view"><%= label "ldap_service", "groups" %></td>
  <td class="value_td">
    <% @ldap_service.groups.each do |group| %>
    <div><%= group.description %></div>
    <% end %>
  </td>
  </tr>
</table>

<% content_for :right do %>
<div><%= link_to t('link.edit'), edit_ldap_service_path(@ldap_service) %></div>
<div>
  <%= link_to( t('link.destroy'),
               ldap_service_path(@ldap_service),
               :confirm => t('destroy_confirm',
                             :object_name => @ldap_service.uid),
               :method => :delete ) %>
</div>
<% end %>

<% content_for :footer do %>
<ul>  
  <li class="link_header">
    <%= link_to t('layouts.application.schools'),  schools_path %> 
  </li>
  <% school_list.each do |school| %>
  <li<% if school_list.last == school %> class="last"<% end %>>
    <%= link_to school.displayName,  school_path(school) %></li>
  <% end %>
</ul>
<% end %>
