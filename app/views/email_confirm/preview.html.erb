<h1><%= t('.title') %></h1>

<p>
<%= t('.description') %>
</p>

<%= form_for(:email_confirm, :url => confirm_email_path, :html => { :method => :put })  do |f| %>

<%= hidden_field_tag :jwt, params[:jwt] %>

<table>
<tr>
  <td><%= label :email_confirm, :password, t('activeldap.attributes.user.password') %></td>
  <td><%= password_field :email_confirm, :password %></td>
</tr>

<tr>
  <td></td>
  <td><%= f.submit t('.confirm') %></td>
</tr>

</table>

<% end %>
