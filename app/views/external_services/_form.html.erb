<% form_for(@external_service, :url => path, :html => { :method => method })  do |f| %>
<table>
  <% if action_name == "new" %>
  <tr>
    <td><%= f.label :uid %></td>
    <td><%= f.text_field :uid %></td>
  </tr>
  <% end %>
  <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
    <td><%= f.label :userPassword %></td>
    <td><%= f.text_field :userPassword %></td>
  </tr>
  <tr>
    <td class="label_for_checkbox_list"><%= f.label :groups %></td>
    <td>
    <% @system_groups.each do |g| %>
    <div>
      <input<%= f.object.groups.include?(g) ? ' checked="checked"' : "" %> id="group_<%= g.cn %>" name="external_service[groups][]" type="checkbox" value="<%= g.id %>" />
      <label class="checkbox" for="group_<%= g.cn %>"><%=h g.description %></label>
    </div>
    <% end %>
    </td>
  </tr>
  <tr>
    <td><%= f.submit submit_text %></td>
  </tr>
</table>
  <% end %>
