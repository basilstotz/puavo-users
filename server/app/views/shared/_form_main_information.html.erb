<table>
  <tr>
    <td>
      <div><%= link_to( image_tag("computer.png") ) %></div>
    </td>
    <td>
      <p>
	<%= f.label :puavoHostname %><br />
	<% if f.object.userCertificate %>
	<%= f.object.puavoHostname %>
	<% else %>
	<%= f.text_field :puavoHostname %>
	<%= f.object.userCertificate.to_s %>
	<% end %>
      </p>
      <p>
	<%= device_type(f) %>
      </p>
      <p>
	<%= f.label :puavoTag %><br />
	<%= f.text_field :puavoTag %>
      </p>
      <p>
	<%= f.label :puavoDeviceStatus %><br />
	<%= f.text_field :puavoDeviceStatus %>
      </p>

    </td>
  </tr>
</table>
