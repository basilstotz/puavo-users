<table>
<%= render :partial => 'shared/main_information', :locals => { :device => @server} %>
</table>
<p>&nbsp;</p>
<table>

<%= render :partial => 'shared/linux_device_information', :locals => { :device => @server} %>

</table>

<h2><%= t('.automounts') %></h2>

<table>
<tr>
  <td class="label_td view"><%= label @server.class.to_s.downcase, "puavoExport" %></td>
  <td class="value_td"><%= Array(@server.puavoExport).join("<br />")  %></td>
</tr>
</table>

<% content_for :right do %>
<div><%= link_to t('link.automounts'), server_automounts_path(@server) %></div>
<div><%= link_to t('link.edit'), edit_server_path(@server) %></div>
<% if @server.userCertificate %>
  <div><%= link_to t('link.set_install_mode'), revoke_certificate_server_path(@server), :method => :delete %></div>
<% end %>
<% end %>
