<h1><%= t('.title') %></h1>

<table>
<%= render :partial => 'shared/main_information', :locals => { :device => @server} %>
</table>
<p>&nbsp;</p>
<table>
<tr>
  <td class="label_td"><%= label @server.class.to_s.downcase, "macAddress" %></td>
  <td><%=h @server.macAddress %></td>
</tr>

<%= render :partial => 'shared/linux_device_information', :locals => { :device => @server} %>

</table>

<% content_for :right do %>
<div><%= link_to 'Automounts', server_automounts_path(@server) %></div>
<div><%= link_to 'Edit', edit_server_path(@server) %></div>
<% if @server.userCertificate %>
  <div><%= link_to 'Set install mode', revoke_certificate_server_path(@server), :method => :delete %></div>
<% end %>
<% end %>
