<h1><%= t('.title') %></h1>

<table class='list'>
  <tr>
    <th><%= t("activeldap.attributes.server.puavoHostname") %></th>
    <th><%= t('activeldap.attributes.server.puavoDeviceType') %></th>
    <th><%= t('activeldap.attributes.server.puavoDeviceManufacturer') %></th>
    <th><%= t('activeldap.attributes.server.puavoDeviceModel') %></th>
    <th colspan="3"><%= t("actions") %></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= link_to server.puavoHostname, server %></td>
    <td><%=h server.puavoDeviceManufacturer %></td>
    <td><%=h server.puavoDeviceModel %></td>
    <td><%=h server.serialNumber %></td>
    <td><%= link_to 'Automounts', server_automounts_path(server) %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
