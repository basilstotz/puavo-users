<h1>Listing devices</h1>

<table>
  <tr>
    <th>Puavohostname</th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%=h device.puavoHostname %></td>
    <td><%= link_to 'Show', device_path(@school, device) %></td>
    <td><%= link_to 'Edit', edit_device_path(@school, device) %></td>
    <td><%= link_to 'Destroy', device_path(@school, device), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New device', new_device_path(@school) %>
