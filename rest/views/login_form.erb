<h1><%= t.sso.title %></h1>

<p>
    <%= t.sso.login_to %> <%= external_service["name"] %>
</p>

<% if @organisation %>
    <h2><%= @organisation["name"] %></h2>
<% end %>

<form action="" method="post" accept-charset="utf-8" >

    <input type="hidden" name="return_to" value="<%= params["return_to"] %>">

    <% if @organisation %>
        <input type="hidden" name="organisation" value="<%= @organisation["domain"] %>">
    <% end %>

    <label class="field">
        <input placeholder="<%= t.sso.username %>" type="text" name="username" value="<%= params["username"] %>" autofocus>
        <% if @organisation %>
            @<%= @organisation["domain"] %>
        <% end %>
        <a href="#username-help">*</a>
    </label>

    <input class="field" placeholder="<%= t.sso.password %>" type="password" value="<%= params["password"] %>" name="password">

    <input type="submit" value="Login">
</form>

<% if @error_message %>
<small class="error">
    <%= t.sso.error %>: <%= @error_message %>
</small>
<% end %>



<div id="username-help">
    <h2><%= t.sso.help %></h2>
    <p>
    <% if @organisation %>
        <%= t.sso.username_help %>
    <% else %>
        <%= t.sso.organisation_help %>
    <% end %>
    </p>

</div>

